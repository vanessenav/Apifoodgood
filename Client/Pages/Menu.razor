@page "/menu"



<section id="">
    <div class="container">
        <h1>Меню</h1>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">MenuId</th>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Price</th>
                    <th scope="col">Calories</th>
                </tr>
            </thead>
            <tbody>
               @foreach (var flow in result)
                {
                    <tr>
                        <th scope="row">@flow.MenuId</th>
                        <td>@flow.DishName</td>
                        <td>@flow.Description</td>
                        <td>@flow.Price</td>
                        <td>@flow.Calories</td>
                    </tr>
                } 
            </tbody>
        </table>
    </div>
</section>
<style>


body {
  background-color: #3e94ec;
  font-family: "Roboto", helvetica, arial, sans-serif;
  font-size: 16px;
  font-weight: 400;
  text-rendering: optimizeLegibility;
}

div.table-title {
   display: block;
  margin: auto;
  max-width: 600px;
  padding:5px;
  width: 100%;
}

